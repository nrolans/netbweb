      <div class="page-header">
        <h1>Backups for {{ Hostname }}</h1>
      </div>

      <div class="row">

        <div class="col-md-12">
          <h2>Diff</h2>


          <form class="form-inline" role="form">
            <div class="form-group">
              <label for="date1">From</label>
              <select class="form-control" id="date1">
              {{#Dates}}
                <option value="{{URL}}">{{String}}</option>
              {{/Dates}}
              </select>
            </div>
            <div class="form-group">
              <label for="date2">To</label>
              <select class="form-control" id="date2">
              {{#Dates}}
                <option value="{{URL}}">{{String}}</option>
              {{/Dates}}
              </select>
            </div>
            <button type="button" onclick="ToDiff()" class="btn btn-info">Diff</button>
          </form>

        </div>

        <div class="col-md-12">
          <h2>Entries</h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              {{#Dates}}
              <tr>
                <td><a href="/hosts/{{Hostname}}/dates/{{URL}}">{{String}}</a></td>
              </tr>
              {{/Dates}}
            </tbody>
          </table>
        </div>
      </div>
      <script>
      function ToDiff() {
        $d1 = document.getElementById("date1").value
        $d2 = document.getElementById("date2").value
        window.location.assign("/hosts/{{Hostname}}/diff/"+$d1+"/"+$d2)
      }
      </script>
