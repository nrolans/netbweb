      <div class="page-header">
        <h1>Dashboard</h1>
      </div>

      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Status</th>
                <th>Hostname</th>
                <th>Last backup</th>
              </tr>
            </thead>
            <tbody>
              {{#Entries}}
              <tr>
                <td><span class="label label-{{ AgoStatus }}">{{ Ago }}</span></td>
                <td><a href="/hosts/{{ Hostname }}">{{ Hostname }}</a></td>
                <td>{{#LastBackup}}{{ LastBackup }}{{/LastBackup}}</td>
              </tr>
              {{/Entries}}
            </tbody>
          </table>
        </div>
      </div>
